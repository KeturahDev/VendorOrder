@{Layout = "_Layout";}
@using VendorOrder.Models;

<h1>Vendor: @Model.Name</h1>
<p>Vendor Description:  <span>@Model.Description</span></p> 

<p>Orders: <span>@Model.OrderList.Count</span></p>

@if(Model.OrderList.Count <= 0)
{
  <p>There are currently no orders listed under @Model.Name</p>
  // <button><a href="/orders/new">Add Order</a></button>
}
@foreach(Order order in Model.OrderList)
{
  <h4>Order: @order.Title</h4>
  <p>Order's description: @order.Description</p>
  <p>Price: @order.Price</p>
  <p>Date: @order.Date</p>
  <p>Ingredients: @order.Ingredients</p>
}

<button><a href="/vendors/@Model.Id/orders/new">Add new Menu Item</a></button>